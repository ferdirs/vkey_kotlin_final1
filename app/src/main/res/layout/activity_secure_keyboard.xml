<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecureKeyboardActivity"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/iv_sistema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:src="@drawable/sistema"/>

    <TextView
        android:id="@+id/tv_securekb"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:text="Secure Keyboard"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
        android:layout_marginTop="10dp"/>

    <com.vkey.android.secure.keyboard.VKSecureEditText
        android:id="@+id/et_securekb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
        android:hint="Input somehting here"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/red"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_securekb"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_securekb"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TEST"
        android:layout_margin="15dp"/>






    <TextView
        android:id="@+id/tv_securekp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:text="Secure Keypad Random"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_securekb"
        android:layout_marginTop="10dp"/>

    <com.vkey.android.secure.keyboard.VKSecureEditText
        android:id="@+id/et_securekp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_1"
        android:inputType="number"
        android:hint="Input somehting here"
        android:layout_marginTop="55dp"
        app:randomized="true"
        />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/red"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_securekp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_reskp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_securekp"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TEST"
        android:layout_margin="15dp"/>






    <TextView
        android:id="@+id/tv_securekpn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:text="Secure Keypad "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_securekp"
        android:layout_marginTop="10dp"/>

    <com.vkey.android.secure.keyboard.VKSecureEditText
        android:id="@+id/et_securekpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_2"
        android:inputType="number"
        android:hint="Input somehting here"
        android:layout_marginTop="55dp" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/red"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_securekpn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_reskpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_securekpn"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TEST"
        android:layout_margin="15dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>