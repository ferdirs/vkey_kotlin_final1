<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlockDataEncryption"
    android:background="@color/grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sistema"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/sistema"/>

        <TextView
            android:id="@+id/tv_enc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="Encrypt Block Of Data"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/et_enc_bdata1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
            android:layout_marginTop="30dp"
            android:hint="Input Something Here"/>



        <Button
            android:id="@+id/bt_enc_bdata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_enc_bdata1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:text="save"
            android:background="@color/red"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_dec"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_enc"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="Encrypt Block Of Data"
            android:padding="10dp"/>



        <Button
            android:id="@+id/bt_dc_bdata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_enc"
            android:background="@color/red"
            android:text="Decrypt"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="60dp"

            />

        <TextView
            android:id="@+id/tv_dc_bdata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/bt_dc_bdata1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dec"
            tools:text="ASAS"
            app:layout_constraintTop_toBottomOf="@+id/tv_enc"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>